<!doctype html>
<html lang='en'>
<head>
    <meta charset='UTF-8'>
    <meta name='viewport'
          content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0'>
    <meta http-equiv='X-UA-Compatible' content='ie=edge'>
    <title>List Pets</title>
</head>
<body>
<h1>List Pets</h1>

<table>
    <thead>
    <tr>
        <td>#</td>
        <td>Customer</td>
        <td>Phone</td>
        <td>Name</td>
        <td>Type</td>
        <td>Status</td>
    </tr>
    </thead>
    <tbody>
    <!--Render data-->
    <% for (let i = 0; i < pets.length; i++) {%>
        <tr>
            <td><%= i %></td>
            <td><%= pets[i].customer.name %></td>
            <td><%= pets[i].customer.phone %></td>
            <td><%= pets[i].name %></td>
            <td><%= pets[i].type %></td>
            <td><%= pets[i].status %></td>
        </tr>
    <% } %>
    </tbody>
</table>

</body>
</html>
